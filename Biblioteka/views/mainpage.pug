    body 
        .container
            .row
                .col-md-offset-1.col-md-10
                    .panel
                        .panel-heading
                            .row
                                .col.col-sm-3.col-xs-12
                                    h4.title
                                        | Data 
                                        span List
                                .col-sm-9.col-xs-12.text-right
                                    .btn_group
                                        input.form-control(type='text' placeholder='Search')
                        .panel-body.table-responsive
                            table.table
                                thead
                                    tr
                                        th Tytu≈Ç
                                        th Autor
                                        th Akcja 
                                tbody
                                    tr
                                        each item in items
                                            if (item.wypozyczone == "admin")
                                                td #{item.tytul}
                                                td #{item.autor}
                                                td
                                                    ul.action-list
                                                        li
                                                            a(href='#' data-tip='check')
                                                                i.fa.fa-bookmark
                                                                i.fa.fa-check
                                                        li
                                                            a(href='#' data-tip='edit')
                                                                i.fa.fa-edit
                                                        li
                                                            a(href='#' data-tip='delete')
                                                                i.fa.fa-trash
